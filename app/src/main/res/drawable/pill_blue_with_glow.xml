<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow (mehki radialni gradient) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="60%"
                android:gradientRadius="60dp"
                android:startColor="#661976F6"
                android:endColor="#001976F6" />
        </shape>
    </item>

    <!-- Modra kapsula na vrhu -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#1976F6" />
        </shape>
    </item>
</layer-list>