<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect with Smartwatch"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#111111"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Izberi platformo za povezavo"
        android:textSize="14sp"
        android:textColor="#555555"
        android:paddingBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/providers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/connect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textAllCaps="false"
        android:backgroundTint="#6366F1"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dolg pritisk na ponudnika odpre trgovino za namestitev."
        android:textSize="12sp"
        android:textColor="#888888"
        android:paddingTop="4dp" />

</LinearLayout>

