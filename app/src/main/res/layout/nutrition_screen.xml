<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">


        <com.example.myapplication.ui.screens.DonutProgressView
            android:id="@+id/donut_ring"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Center text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/donut_ring"
            app:layout_constraintBottom_toBottomOf="@id/donut_ring"
            app:layout_constraintStart_toStartOf="@id/donut_ring"
            app:layout_constraintEnd_toEndOf="@id/donut_ring"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#111827"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remaining_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining"
                android:textColor="#6B7280"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Makroji: večji tekst -->
        <LinearLayout
            android:id="@+id/macros_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/donut_ring"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_macros_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein: 0g"
                android:textColor="#111827"
                android:textSize="16sp" />

            <Space android:layout_width="16dp" android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_macros_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat: 0g"
                android:textColor="#111827"
                android:textSize="16sp" />

            <Space android:layout_width="16dp" android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_macros_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs: 0g"
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  →  "
                    android:textColor="#111827"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_macros_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar: –g"
                    android:textColor="#111827"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Naslov nad karticami -->
        <TextView
            android:id="@+id/tv_make_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/macros_row"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Make custom meals"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Breakfast -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_breakfast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_make_custom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#E5E7EB"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_breakfast_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Breakfast"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_add_breakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_input_add"
                        app:tint="@android:color/white"
                        app:backgroundTint="#1976F6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="#1976F6"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#CCCCCC"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lunch -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_lunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_breakfast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#E5E7EB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_lunch_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_add_lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_input_add"
                        app:tint="@android:color/white"
                        app:backgroundTint="#1976F6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="#1976F6"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#CCCCCC"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dinner -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_lunch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#E5E7EB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_dinner_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dinner"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_add_dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_input_add"
                        app:tint="@android:color/white"
                        app:backgroundTint="#1976F6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="#1976F6"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#CCCCCC"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Snacks -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_snacks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_dinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#E5E7EB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_snacks_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Snacks"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_add_snacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_input_add"
                        app:tint="@android:color/white"
                        app:backgroundTint="#1976F6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="#1976F6"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#CCCCCC"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_snacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Recommended -->
        <TextView
            android:id="@+id/tv_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended recipies/foods:"
            android:textColor="#111827"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/card_snacks"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>