<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_bg"
    android:padding="8dp">

    <!-- Meal type label -->
    <TextView
        android:id="@+id/txtMealType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ³ Breakfast"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingBottom="4dp" />

    <!-- Buttons grid: 2 custom meals + scan + search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Custom Meal 1 -->
        <TextView
            android:id="@+id/btnMeal1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Meal 1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_button_bg"
            android:padding="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Custom Meal 2 -->
        <TextView
            android:id="@+id/btnMeal2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Meal 2"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_button_bg"
            android:padding="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Barcode Scanner -->
        <TextView
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="ðŸ“·\nScan"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_button_bg"
            android:padding="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Search Foods -->
        <TextView
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="ðŸ”\nSearch"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_button_bg"
            android:padding="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>

